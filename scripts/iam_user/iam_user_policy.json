{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "CoreInfraManagement",
			"Effect": "Allow",
			"Action": [
				"ec2:*",
				"rds:*",
				"vpce:*",
				"iam:CreateRole",
				"iam:PutRolePolicy",
				"iam:AttachRolePolicy",
				"iam:GetRole",
				"iam:ListRoles"
			],
			"Resource": "*"
		},
		{
			"Sid": "AppServiceAccess",
			"Effect": "Allow",
			"Action": [
				"s3:*",
				"secretsmanager:*",
				"sns:*",
				"elasticloadbalancing:*"
			],
			"Resource": "*"
		},
		{
			"Sid": "MonitorandLogging",
			"Effect": "Allow",
			"Action": [
				"cloudwatch:*",
				"logs:*"
			],
			"Resource": "*"
		}
	]
}